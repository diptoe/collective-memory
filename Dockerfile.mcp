FROM python:3.12-slim AS mcp

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
  && rm -rf /var/lib/apt/lists/*

COPY requirements.txt /app/requirements.txt
RUN python -m pip install --upgrade pip && python -m pip install -r /app/requirements.txt

COPY api/ /app/api/
COPY cm_mcp/ /app/cm_mcp/

# MCP servers speak over stdio; Claude Code/Claude Desktop will manage the process.
CMD ["python", "-m", "cm_mcp"]

